/*
33. Crie um programa que receba um vetor de números reais com 100 elementos.
    Escreva uma função recursiva que inverta a ordem dos elementos presentes no vetor.
*/

#include <stdio.h>   // Inclui a biblioteca padrão de entrada e saída (printf, scanf)
#include <stdlib.h>


// Protótipo da função recursiva
void inverterVetor(float vetor[], int inicio, int fim);

// Função principal (main)
int main()
{
    float V[100]; // Declara um vetor de 100 números reais (tipo float)
    int i; // Declara a variável de controle do laço de repetição

    // Exibe mensagem pedindo para o usuário digitar os valores do vetor
    printf("Digite 100 numeros reais:\n"); // Mostra instrução na tela

    // Estrutura de repetição para preencher o vetor com 100 valores
    for (i = 0; i < 100; i++) // Laço que percorre de 0 até 99
    {
        printf("Elemento %d: ", i + 1); // Mostra o número do elemento atual
        scanf("%f", &V[i]);         // Lê o valor digitado e armazena na posição correspondente
    }

    // Exibe o vetor original antes da inversão
    printf("\nVetor original:\n"); // Mostra título para os valores originais

    // Percorre o vetor e imprime cada elemento
    for (i = 0; i < 100; i++) // Laço que percorre novamente de 0 até 99
    {
        printf("%.2f ", V[i]); // Imprime o valor com duas casas decimais, separado por espaço
    }

    // Chama a função recursiva para inverter o vetor completo
    inverterVetor(V, 0, 99); // Parâmetros: início = 0, fim = 99 (último índice)

    // Exibe o vetor após a inversão
    printf("\n\nVetor invertido:\n"); // Mostra título para o vetor já invertido

    // Percorre novamente o vetor e imprime os valores agora invertidos
    for (i = 0; i < 100; i++) // Laço que percorre de 0 até 99
    {
        printf("%.2f ", V[i]); // Imprime cada elemento do vetor invertido
    }

    // Imprime uma quebra de linha ao final para deixar a saída organizada
    printf("\n"); // Move o cursor para a próxima linha

    system("pause");
    return 0; // Finaliza a função principal (main)
}

// Função recursiva que inverte os elementos de um vetor de números reais
void inverterVetor(float vetor[], int inicio, int fim)
{
    // Verifica se os índices já se cruzaram ou se são iguais (caso base)
    if (inicio >= fim)
    {
        return; // Encerra a recursão, pois o vetor já foi invertido até o centro
    }

    // Cria uma variável temporária para armazenar o valor da posição inicial
    float temp = vetor[inicio]; // Guarda o valor do início para fazer a troca

    // Substitui o valor da posição inicial pelo valor da posição final
    vetor[inicio] = vetor[fim]; // Copia o valor da extremidade final para o início

    // Coloca o valor guardado (temp) na posição final
    vetor[fim] = temp; // Conclui a troca dos dois elementos

    // Chama a função novamente, aproximando os índices do centro do vetor
    inverterVetor(vetor, inicio + 1, fim - 1); // Move os índices e continua invertendo
}
