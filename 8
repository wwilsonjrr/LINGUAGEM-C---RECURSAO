/*
8. Faça uma função recursiva que receba um número inteiro positivo N
   e imprima todos os números naturais de 0 até N em ordem decrescente.


   A diferença que manda em tudo

   imprimeCrescente(n - 1);   // chamada recursiva
   printf("%d ", n);          // impressão


   printf("%d ", n);          // impressão
   imprimeDecrescente(n - 1); // chamada recursiva

   “Se imprime depois da recursão, cresce.
   Se imprime antes da recursão, decresce.”


*/

#include <stdio.h>   // Biblioteca padrão de entrada e saída
#include <stdlib.h>


//Protótipo da função recursiva
void imprimeDecrescente(int n)


//Função principal (main)
int main()
{
    int N;  // Declara a variável para armazenar o número digitado

    // Solicita que o usuário digite um número inteiro positivo
    printf("Digite um numero inteiro nao negativo: ");
    scanf("%d", &N);  // Lê o valor digitado e armazena em N

    // Verifica se o número é realmente nao negativo
    if (N < 0)
    {
        printf("Por favor, digite um numero nao negativo.\n");
        return 0;  // Encerra o programa se o valor for inválido
    }

    // Exibe mensagem antes da impressão
    printf("Numeros de %d ate 0 em ordem decrescente:\n", N);

    // Chama a função recursiva
    imprimeDecrescente(N);

    printf("\n");  // Pula uma linha após a impressão

    system("pause");
    return 0;  // Indica que o programa terminou corretamente
}

// Função recursiva que imprime os números de N até 0 em ordem decrescente
void imprimeDecrescente(int n) // imprimir ≠ retornar
{
    // Caso base: quando n for 0, imprime 0 e encerra a recursão
    if (n == 0)
    {
        printf("%d ", 0);  // Imprime o último número da sequência
        return;            // Encerra a função
    }

    // Primeiro imprime o valor atual de n (pois queremos ordem decrescente)
    printf("%d ", n);

    // Chamada recursiva: imprime o próximo número menor
    imprimeDecrescente(n - 1);
}
