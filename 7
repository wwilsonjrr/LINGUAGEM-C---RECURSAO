/*
7. Faça uma função recursiva que receba um número inteiro positivo N
   e imprima todos os números naturais de 0 até N em ordem crescente.
*/

#include <stdio.h>   // Biblioteca padrão de entrada e saída
#include <stdlib.h>

// Função recursiva que imprime os números de 0 até N em ordem crescente
void imprimeCrescente(int n) // imprimir ≠ retornar
{
    // Caso base: quando n for 0, imprime 0 e encerra a recursão
    if (n == 0)
    {
        printf("%d ", 0);  // Imprime o primeiro número da sequência
        return;            // Encerra a função
    }

    // Chamada recursiva: imprime todos os números até (n - 1)
    imprimeCrescente(n - 1);

    // Após retornar das chamadas recursivas, imprime o valor atual de n
    printf("%d ", n);
}

int main()
{
    int N;  // Declara a variável para armazenar o número digitado

    // Solicita que o usuário digite um número inteiro positivo
    printf("Digite um numero inteiro positivo: ");
    scanf("%d", &N);  // Lê o valor digitado e armazena em N

    // Verifica se o número é realmente não negativo
    if (N < 0)
    {
        printf("Por favor, digite um numero nao negativo.\n");
        return 0;  // Encerra o programa se o valor for inválido
    }

    // Chama a função recursiva para imprimir os números
    printf("Numeros de 0 ate %d em ordem crescente:\n", N);
    imprimeCrescente(N);  // Executa a recursão

    printf("\n");  // Pula uma linha após a impressão

    system("pause");
    return 0;  // Indica que o programa terminou corretamente
}
