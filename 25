/*
25. Faça uma função recursiva que receba um número N e retorne o N-ésimo termo
    da sequência de Tetranacci.

    Os números tetranacci iniciam com quatro termos pré-determinados:
    0, 0, 0, 1

    A partir daí, todos os demais números são obtidos pela soma dos quatro números anteriores.

    Assim, os primeiros números tetranacci são:
    0, 0, 0, 1, 1, 2, 4, 8, 15, 29, 56, 108, 208 ...
*/

#include <stdio.h>   // Biblioteca padrão de entrada e saída
#include <stdlib.h>


// Protótipo da função recursiva
int tetranacci(int N);

// Função principal (main)
int main()
{
    int n;  // Variável para armazenar o número digitado pelo usuário

    // Solicita que o usuário digite o valor de n
    printf("Digite o valor de n (n >= 0): ");
    scanf("%d", &n);  // Lê o valor e armazena na variável n

    // Verifica se n é válido (não negativo)
    if (n < 0)
    {
        printf("O valor de n deve ser maior ou igual a zero.\n");  // Mensagem de erro
        return 0;  // Encerra o programa se o valor for inválido
    }

    // Chama a função recursiva e armazena o resultado
    int resultado = tetranacci(n);

    // Exibe o resultado final na tela
    printf("\nO termo f(%d) da sequencia de Tetranacci eh: %d\n", n, resultado);

    system("pause");
    return 0;  // Indica que o programa terminou corretamente
}

// Função recursiva que calcula o N-ésimo termo da sequência Tetranacci
int tetranacci(int N)
{
    // Caso base 1: se n for 0, retorna 0
    if (N == 0)
        return 0;

    // Caso base 2: se n for 1, retorna 0
    if (N == 1)
        return 0;

    // Caso base 3: se n for 2, retorna 0
    if (N == 2)
        return 0;

    // Caso base 4: se n for 3, retorna 1
    if (N == 3)
        return 1;

    // Caso recursivo: soma os quatro termos anteriores
    return tetranacci(N - 1) + tetranacci(N - 2) + tetranacci(N - 3) + tetranacci(N - 4);
}
