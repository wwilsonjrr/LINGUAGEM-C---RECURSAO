/*
24. Faça uma função recursiva que receba um número N e retorne o N-ésimo termo
    da sequência de Tribonacci. Os números tribonacci são definidos pela seguinte recursão:

    f(n) = 0 se n = 0
    f(n) = 0 se n = 1
    f(n) = 1 se n = 2
    f(n) = f(n-1) + f(n-2) + f(n-3) se n > 3
*/

#include <stdio.h>   // Biblioteca padrão de entrada e saída
#include <stdlib.h>

// Protótipo da função recursiva
int tribonacci(int N);

// Função principal (main)
int main()
{
    int n;  // Variável que armazenará o valor digitado pelo usuário

    // Solicita que o usuário digite o valor de n
    printf("Digite o valor de n (n >= 0): ");
    scanf("%d", &n);  // Lê o valor digitado e armazena em n

    // Verifica se n é um valor válido
    if (n < 0)
    {
        printf("O valor de n deve ser maior ou igual a zero.\n");  // Mensagem de erro
        return 0;  // Encerra o programa se o valor for inválido
    }

    // Chama a função recursiva tribonacci e armazena o resultado
    int resultado = tribonacci(n);

    // Exibe o resultado final
    printf("\nO termo f(%d) da sequencia de Tribonacci eh: %d\n", n, resultado);

    system("pause");
    return 0;  // Indica que o programa terminou corretamente
}

// Função recursiva que calcula o N-ésimo termo da sequência de Tribonacci
int tribonacci(int N)
{
    // Caso base 1: se n for 0, retorna 0
    if (N == 0)
        return 0;  // Primeiro termo da sequência

    // Caso base 2: se n for 1, retorna 0
    if (N == 1)
        return 0;  // Segundo termo da sequência

    // Caso base 3: se n for 2, retorna 1
    if (N == 2)
        return 1;  // Terceiro termo da sequência

    // Caso recursivo: soma os três termos anteriores da sequência
    return tribonacci(N - 1) + tribonacci(N - 2) + tribonacci(N - 3);
}
